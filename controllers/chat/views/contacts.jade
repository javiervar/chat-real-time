doctype
html(lang="en" ng-app='friends')
  head
    title #{title} 
    link(rel='stylesheet', href='css/style.css')
     
  body(ng-controller='friends-ctrl')
    .container-frieds
      div(ng-repeat="p in person")
        a()
          .container-list
            div()
            span {{p.name}}
            span {{p.status}}
    
    script(type='text/javascript' src='js/libs/jquery-1.11.2.js')
    script(type='text/javascript' src='js/libs/angular.js')
    script(type='text/javascript' src='js/angular-app.js') 
